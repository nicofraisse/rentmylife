<div class="card-trip justify-content-center">
  <%= cl_image_tag @lifestyle.photo%>
  <div class="card-info-all">
    <div class="card-trip-infos">
      <div>
        <h1><%= @lifestyle.name %></h1>
        <span class="description"><%= @lifestyle.description %></span>
      </div>
    <h2 class="card-trip-pricing"><%= "Price: $#{@lifestyle.price}/day" %></h2>
    <img src= "<%= @lifestyle.user.photo %>" class="card-trip-user avatar-bordered" />
    </div>
  <h2>Life owner: <strong><%= @lifestyle.user.first_name %> <%= @lifestyle.user.last_name %></strong></h2>
  <%=link_to "Rent Now", new_lifestyle_booking_path(@lifestyle), class:"btn btn-primary" %>
  <%= link_to "Back to Lifestyles", lifestyles_path, class: "btn btn-info" %>
  </div>
</div>

<h2 class="text-center">Reviews</h2>
  <div class="reviews">
    <ul>
      <% @lifestyle.reviews.each do |review| %>
        <li class="review"><%= render "reviews/show", review: review %></li>
      <% end %>
    </ul>
  </div>

<div class="reviews-form">
  <%= render 'reviews/form', lifestyle: @lifestyle, review: @review %>
</div>
