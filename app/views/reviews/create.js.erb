function refreshForm(innerHTML) {
  console.log('refreshForm', innerHTML)
  const newReviewForm = document.getElementById('reviews-form');
  newReviewForm.innerHTML = innerHTML;
}

function addReview(reviewHTML) {
  console.log('reviewHTML', reviewHTML)
  const reviews = document.getElementById('reviews');
  reviews.insertAdjacentHTML('beforeend', reviewHTML);
}

<% if @review.errors.any? %>
  refreshForm('<%= j render "reviews/form", lifestyle: @lifestyle, review: @review %>');
<% else %>
  addReview('<%= j render "reviews/show", review: @review %>');
  refreshForm('<%= j render "reviews/form", lifestyle: @lifestyle, review: Review.new %>');
<% end %>
